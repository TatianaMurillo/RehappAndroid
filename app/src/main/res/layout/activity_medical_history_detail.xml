<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MedicalHistoryDetail">

<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/lyDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lyDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="Fecha y hora" />

                    <TextView
                        android:id="@+id/tvDateValue"
                        android:layout_width="257dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:enabled="false"
                        android:text="" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyOtherInfoHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end" />
            <EditText
                android:id="@+id/etHistoryName"
                android:hint="@string/medicalHistoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:maxLines="1"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <TextView
        android:id="@+id/tvMedicalHistorySequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/lyPatientInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
        <TableRow>
        <TextView
            android:id="@+id/tvPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:text="Patient" />

            <TextView
                android:id="@+id/tvPatientNameValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp" />
        </TableRow>
            <TableRow>
        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="Age" />
                <TextView
                    android:id="@+id/tvAgeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                   />

            </TableRow>
        <TableRow>
        <TextView
            android:id="@+id/tvNeighborhood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barrio"
            android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tvNeighborhoodValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"/>

        </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/lyMedicalHistoryInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right" >

        <TextView
            android:id="@+id/tvVitalSigns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Signos vitales" />

        <TextView
            android:id="@+id/tvDiseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enfermedades"
            android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/tvQuestionaries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuestionarios"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etAdditionalInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:maxLines="3"
                android:gravity="center_horizontal"
                android:inputType="textMultiLine"
                android:hint="@string/AddditionalInformationMedicalHistory"
                android:layout_margin="10dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
</LinearLayout>