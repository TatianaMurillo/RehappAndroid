<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_margin="10sp"
        android:hint="@string/name"
        android:inputType="text" />

    <Spinner
        android:id="@+id/spnTherapistDocumentType"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/etTherapistDocument"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:ems="10"
        android:hint="@string/therapistDocument"
        android:inputType="number" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:ems="10"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etConfirmarEmail"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:ems="10"
        android:hint="@string/ConfirmEmail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etUserPassword"
        android:layout_width="243dp"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etConfirmUserPassword"
        android:layout_width="240dp"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/ConfirmPassword"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="109dp"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:hint="@string/Save"
        android:onClick="register" />
</LinearLayout>